<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Customer Information</h2>
			<div class="list-group">
				<p class="list-group-item list-group-item-success"><%= @job.customer.name %></p>
				<p class="list-group-item list-group-item-info"><%= @job.customer.account_number %></p>
				<p class="list-group-item list-group-item-warning"><%= @job.customer.phone_one %></p>
				<p class="list-group-item list-group-item-danger"><%= @job.customer.phone_two %></p>
				<p class="list-group-item list-group-item-success"><%= @job.customer.phone_three %></p>
				<p class="list-group-item list-group-item-info"><%= @job.customer.phone_four %></p>
				<p class="list-group-item list-group-item-warning"><%= @job.customer.street %></p>
				<p class="list-group-item list-group-item-danger"><%= @job.customer.city %></p>
				<p class="list-group-item list-group-item-success"><%= @job.customer.state %></p>
				<p class="list-group-item list-group-item-info"><%= @job.customer.zip %></p>
				<p class="list-group-item list-group-item-success">
				<a href="https://www.google.com/maps/search/<%= @job.customer.street %> <%= @job.customer.city %> <%= @job.customer.state %> <%= @job.customer.zip %>" target="_blank">OPEN ADDRESS IN GOOGLE MAPS!</a> 
				</p>
			</div>
		</div>
	</div>
</div>
<hr>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Job I.D. # <%= @job.id %></h2>
			<%= form_for(@job, class: 'form-horizontal') do |f| %>
				<fieldset>
					<div class = "form-group">
						<%= f.label :employee %>
						<%= f.collection_select(:user_id, @users, :id, :email, class: "form-control") %>	
					</div>

					<div class = "form-group">
						<%= f.label :date %>
						<%= f.text_field :date, class: "form-control" %>
					</div>
					
					<div class = "form-group">
						<%= f.label :time %>
						<%= f.select :time, ['7:30 AM', '8:00 AM', '8:30 AM', '9:00 AM', '9:30 AM', '10:00 AM', '10:30 AM', '11:00 AM', '11:30 AM', '12:00 PM', 
							'12:30 PM', '1:00 PM', '1:30 PM', '2:00 PM', '2:30 PM', '3:00 PM', '3:30 PM', '4:00 PM', '4:30 PM', '5:00 PM', '5:30 PM', '6:00 PM'], class: "form-control"%>
					</div>
					
					<div class = "form-group">
						<%= f.label :address %>
						<%= f.text_field :address, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :city %>
						<%= f.text_field :city, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :state %>
						<%= f.text_field :state, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :zip %>
						<%= f.text_field :zip, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :special_job_instructions %>
						<%= f.text_area :special_job_instructions, class: "form-control" %>
					</div>
					
					<div class = "form-group">
						<%= f.label :description %>
						<%= f.text_area :description, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :work_completed %>
						<%= f.text_area :work_completed, class: "form-control" %>
					</div>
					
					<div class = "form-group">
						<%= f.label :billing_information %>
						<%= f.text_area :billing_information, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :notes %>
						<%= f.text_area :notes, class: "form-control" %>
					</div>

					<div class = "form-group">
						<%= f.label :status %>
						<%= f.select :status, ['Waiting To Be Scheduled', 'Scheduled', 'Incomplete', 'Completed But Not Billed', 'Completed And Billed'], class: "form-control"%>
					</div>

					<div class = "form-group">
						<%= f.submit(class: "btn btn-primary btn-sm") %>
					</div>
				</fieldset>
			<% end %> 
		</div>
	</div>
</div>