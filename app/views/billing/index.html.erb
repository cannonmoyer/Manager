<h1>Billing</h1>

<table class="table table-bordered">
	<tr>
		<th>Name</th> <th>Account Number</th> <th>Description</th> <th width="10">Edit</th>  
	</tr>	
	<% @jobs.each do |f| %>
		<tr>
			<td><%= f.customer.name %></td>
			<td><%= f.customer.account_number %></td>
			<td><%= f.description %></td>
			<td><%= link_to "", edit_billing_path(f), class: "glyphicon glyphicon-pencil" %></td> 
		</tr>
	<% end %>
</table>
