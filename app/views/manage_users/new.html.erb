<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Create User</h2>
			<%= form_for(@user, class: 'form-horizontal') do |u| %>
				<fieldset>
					<div class = "form-group">	
						<%= u.label :email %>
						<%= u.text_field :email, class: "form-control"  %>	
					</div>
					
					<div class = "form-group">	
						<%= u.label :level %>
						<%= u.select :level, ['Admin', 'Employee'], class: "form-control"%>
					</div>
					
					<div class = "form-group">
						<%= u.label :password %>
						<%= u.text_field :password, class: "form-control" %>		
					</div>
					
					<div class = "form-group">
						<%= u.label :password_confirmation %>
						<%= u.text_field :password_confirmation, class: "form-control" %>
					</div>
										
					<div class = "form-group">
						<%= u.submit(class: "btn btn-primary btn-sm") %>
					</div>
				</fieldset>
			<% end %> 
		</div>
	</div>
</div>
