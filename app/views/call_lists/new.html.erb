<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Add To Call List</h2>
				<%= form_for(@call_list) do |f|  %>
					<fieldset>
						<div class = "form-group">
							<%= f.label :name %>
							<%= f.text_field :name, class: "form-control" %>
						</div>
						
						<div class = "form-group">
							<%= f.label :phone %>
							<%= f.text_field :phone, class: "form-control" %>
						</div>
						
						<div class = "form-group">
							<%= f.label :description %>
							<%= f.text_field :description, class: "form-control" %>
						</div>

						<div class = "form-group">
							<%= f.submit("Create Record", class: "btn btn-primary btn-sm") %>
						</div>
					</fieldset>
				<% end %> 
		</div>
	</div>
</div>