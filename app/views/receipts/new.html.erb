<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Email A Receipt</h2>
				<%= form_for(@receipt, :remote => true, :html => { :id => "form_correct" }) do |f|  %>
					<fieldset>

						<div class = "form-group">
							<%= f.label :email %>
							<%= f.text_field :email, class: "form-control" %>
						</div>

						<div class = "form-group">
							<%= f.label :information %>
							<%= f.text_area :information, class: "form-control" %>
						</div>
					
						<div class = "form-group">
							<%= f.submit("Create And Email", class: "btn btn-primary btn-sm", :id => "action") %>
						</div>
					</fieldset>
				<% end %> 
		</div>
	</div>
</div>