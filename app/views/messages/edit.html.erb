<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Edit Message</h2>
				<%= form_for(@message, :remote => true, class: 'form-horizontal', :html => { :id => "form_correct" }) do |f| %>
					<fieldset>
						<div class = "form-group">
							<%= f.label :description  %>
							<%= f.text_area :description, class: "form-control" %>
						</div>
						<div class = "form-group">
							<%= f.label :status %>
							<%= f.select :status, ['Message','Note'], class: "form-control"%>
						</div>
						
						<div class = "form-group">
							<%= f.submit(class: "btn btn-primary btn-sm", :id => "action") %>
						</div>
					</fieldset>
			<% end %> 
		</div>
	</div>
</div>
