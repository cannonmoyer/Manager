<center><h1>Pages</h1></center>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12 col-md-6 col-md-offset-3">
			<%= link_to "New Page", new_page_path(), class: "btn btn-primary btn-md" %>
			<br><br>
			<table class="table table-bordered">
				<tr>
					<th>Name</th>  
					<th width="25">view</th>
					<th width="25">delete</th>
				</tr>	
				<% @pages.each do |f| %>
					<tr>
						<td><%= f.name %></td>	
						<td><%= link_to "", edit_page_path(f),  class: "glyphicon glyphicon-pencil" %></td>
						<td><%= link_to "", page_path(f), data:{confirm: 'Are you sure?'},  class: "glyphicon glyphicon-trash", method: :delete %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>


